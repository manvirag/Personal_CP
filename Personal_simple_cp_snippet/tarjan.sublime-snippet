	<content><![CDATA[
vector<int> g[N];
vector<int> visi(N),low(N),ids(N);
vector<pair<int,int>> bridge;
set<int>ap;
ll id;
void dfs(int i,int p){
  visi[i]=1;
  ++id;
  low[i]=id;
  ids[i]=id;
  
  for(auto x: g[i]){
  
   if(p==x)
    continue;

    if(!visi[x])
     {  dfs(x,i);
        low[i]=min(low[i],low[x]);
       if(low[x]>ids[i])            
       {     
           ap.insert(i);
           ap.insert(x);
          bridge.pb({i,x});
        }
    }
    else
      low[i]=min(low[i],ids[x]);   
   }

}
]]></content>
